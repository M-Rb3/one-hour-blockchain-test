{
  "name": "one-hour-blockchain-test",
  "version": "1.0.0",
  "type": "module",
  "description": "One-hour blockchain coding test template with Solidity smart contracts and tests",
  "scripts": {
    "postinstall": "cd frontned && npm install --no-audit --no-fund || true",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.cjs",
    "deploy:sepolia": "npx hardhat run scripts/deploy.cjs --network sepolia",
    "verify": "npx hardhat verify",
    "dev": "echo '\\n📋 To run tests: npm test\\n🌐 To start frontend: cd frontned && npm run dev\\n🚀 To deploy: npm run deploy:sepolia\\n'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "keywords": [
    "blockchain",
    "solidity",
    "hardhat",
    "test",
    "ethereum"
  ],
  "license": "MIT"
}
